model User {
  id        String  @id @default(uuid())
  login     String  @unique
  password  String
  email     String
  firstName String
  lastName  String
  FullName  String
  isClient  Boolean @default(true)

  Employer   Employer? @relation(fields: [employerId], references: [id])
  employerId String?
  Client     Client?   @relation(fields: [clientId], references: [id])
  clientId   String?
}

model Employer {
  id   String @id @default(uuid())
  user User[] //relasion many to one
  role String
}

model Client {
  id      String @id @default(uuid())
  user    User[]
  // firstName String
  // lastName  String
  // FullName  String
  // email     String @unique
  cin     String @unique
  contact String
}

model Reclamation {
  id          String @id @default(uuid())
  refRec      String @default("R000001")
  observation String
  documentURL String
  description String
  status      String
}

model Reponse {
  id String @id @default(uuid())
}
